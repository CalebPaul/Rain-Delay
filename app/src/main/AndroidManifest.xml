<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="calebpaul.raindelay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/brella"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SetConditionsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="calebpaul.raindelay.MainActivity"/>
        </activity>


        <activity android:name=".ViewConditionsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="calebpaul.raindelay.SetConditionsActivity"/>
        </activity>

        <activity android:name=".ExampleConditionsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="calebpaul.raindelay.SetConditionsActivity"/>
        </activity>
    </application>

</manifest>