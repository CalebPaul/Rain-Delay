<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calebpaul.raindelay.ViewConditionsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder name"
        android:id="@+id/conditionNameTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder wind"
        android:id="@+id/maxWindTextView"
        android:layout_below="@+id/conditionNameTextView"
        android:layout_alignLeft="@+id/conditionNameTextView"
        android:layout_alignStart="@+id/conditionNameTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder max temp"
        android:id="@+id/maxTempTextView"
        android:layout_below="@+id/maxWindTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder min temp"
        android:id="@+id/minTempTextView"
        android:layout_below="@+id/maxTempTextView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
